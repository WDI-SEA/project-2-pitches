<div class="container">
  <h1 class="text-center">Farm Details</h1>
  
  <h3><strong>Address:</strong> <%=farmMarketData.marketdetails.Address%></h3>
  <h3><strong>Schedule:</strong> <%=farmMarketData.marketdetails.Schedule.slice(0, -16)%></h3>
  <h3><strong>Products:</strong> <%=farmMarketData.marketdetails.Products%></h3>
  <h3><a target='_blank' href='<%=farmMarketData.marketdetails.GoogleLink%>'><strong>Google Maps</strong></a></h3>
  <p class="text-center">
    <a href= '/list?name=<%=name%>&zipcode=<%=zipcode%>'>Back to Farm List</a>
  </p>
</div>

<script>
  if (!localStorage.getItem('user')) {
            let user = "<%- name %>"
            localStorage.setItem('user', user)
  }
  let currentUser = localStorage.getItem('user')
</script>

    <div class="faves">
      <h3><%= farmMarketData.id %></h3>
      <form method="POST" action="/favorite">
          <input hidden type="text" name="marketname" value="<%=marketname%>"> 
          <input hidden type="text" name="name" value="<%=name%>"> 
          <input hidden name="user" id="userInput" />
           <input class="btn btn-primary" type="submit" value='Add Market to Favorites!'>
        </form>
  
  <script>
    document.getElementById('user').innerText = `Hello, ${currentUser}.  Here are your markets.`
    document.getElementById('userInput').value = currentUser
    console.log(`User logged in: ${currentUser}`)
  </script>
  
    </div>

